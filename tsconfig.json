{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@fantasyui/*": [
                "src/*"
            ],
            "@fantasy955/fantasy-ui-react": [
                "src/index.ts"
            ]
        },
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "declarationDir": "lib",
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "jsxFactory": "React.createElement",
        "jsxFragmentFactory": "React.Fragment",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "lib": [
            "dom",
            "es2017"
        ],
        "skipLibCheck": true,
        "stripInternal": true,
        "outDir": "dist", // 生成目录
        "declaration": true
    },
    "include": [
        "src",
        "typings.d.ts"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "es",
        "**/__test__",
        "test",
        "tests"
    ]
}