{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@fantasy955/fantasy-ui-react": [
                "src/index.ts"
            ]
        },
        "target": "esnext",
        "module": "commonjs",
        "jsx": "react",
        "declaration": true,
        "declarationDir": "lib",
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
    },
    "include": [
        "src",
        "typings.d.ts"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "es",
        "**/__test__",
        "test",
        "tests"
    ]
}